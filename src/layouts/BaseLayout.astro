---
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  canonicalUrl?: string;
  image?: string;
  type?: string;
}

const { title, description, canonicalUrl, image, type = 'website' } = Astro.props;
const currentUrl = canonicalUrl || Astro.url.href;
const ogImage = image || 'https://weightlosssurgery.com.au/og-image.jpg';
