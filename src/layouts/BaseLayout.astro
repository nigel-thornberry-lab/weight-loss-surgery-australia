---
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  canonicalUrl?: string;
  image?: string;
  type?: string;
}

const { title, description, canonicalUrl, image, type = 'website' } = Astro.props;
const currentUrl = canonicalUrl || Astro.url.href;
const ogImage = image || 'https://weightlosssurgery.com.au/og-image.jpg';
---

<!DOCTYPE html>
<html lang="en-AU">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    
    <!-- Preconnect to external domains for faster loading -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- DNS Prefetch for performance -->
    <link rel="dns-prefetch" href="https://fonts.googleapis.com" />

    <!-- Optimized Font Loading -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet" />
    
    <!-- Favicon with all sizes -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon.svg" />
    
    <!-- Critical inline CSS for above-fold content -->
    <style>
      /* Critical CSS - Above the fold */
      body{margin:0;font-family:'Poppins',-apple-system,BlinkMacSystemFont,'Segoe UI',Roboto,Oxygen,Ubuntu,Cantarell,sans-serif;-webkit-font-smoothing:antialiased;-moz-osx-font-smoothing:grayscale}
      header{background:#fff;border-bottom:1px solid #e5e7eb;position:sticky;top:0;z-index:50}
      .max-w-7xl{max-width:80rem;margin:0 auto;padding:0 1rem}
      @media(min-width:640px){.max-w-7xl{padding:0 1.5rem}}
      @media(min-width:1024px){.max-w-7xl{padding:0 2rem}}
    </style>

    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <meta name="author" content="Weight Loss Surgery Australia" />
    <meta name="geo.region" content="AU" />
    <meta name="geo.placename" content="Australia" />
    <meta name="language" content="English" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="en_AU" />
    <meta property="og:site_name" content="Weight Loss Surgery Australia" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={currentUrl} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- Canonical URL - Critical for SEO -->
    <link rel="canonical" href={currentUrl} />
    
    <!-- Additional SEO -->
    <meta name="generator" content={Astro.generator} />
    
    <!-- Structured Data - Medical Website & Organization -->
    <script type="application/ld+json">
      {JSON.stringify({
        "@context": "https://schema.org",
        "@graph": [
          {
            "@type": "MedicalWebPage",
            "name": title,
            "description": description,
            "url": currentUrl,
            "inLanguage": "en-AU",
            "isPartOf": {
              "@type": "WebSite",
              "name": "Weight Loss Surgery Australia",
              "url": "https://weightlosssurgery.com.au"
            }
          },
          {
            "@type": "MedicalBusiness",
            "@id": "https://weightlosssurgery.com.au/#organization",
            "name": "Weight Loss Surgery Australia",
            "description": "Australia's leading resource for weight loss surgery information, connecting patients with AHPRA-registered bariatric surgeons across Sydney, Melbourne, and beyond.",
            "url": "https://weightlosssurgery.com.au",
            "logo": {
              "@type": "ImageObject",
              "url": "https://weightlosssurgery.com.au/logo.png"
            },
            "image": "https://weightlosssurgery.com.au/og-image.jpg",
            "telephone": "1300 000 000",
            "areaServed": {
              "@type": "Country",
              "name": "Australia"
            },
            "medicalSpecialty": ["Bariatric Surgery", "Weight Loss Surgery"],
            "hasOfferCatalog": {
              "@type": "OfferCatalog",
              "name": "Bariatric Surgery Procedures",
              "itemListElement": [
                {
                  "@type": "Offer",
                  "itemOffered": {
                    "@type": "Service",
                    "name": "Gastric Sleeve Surgery",
                    "description": "Vertical sleeve gastrectomy procedure"
                  }
                },
                {
                  "@type": "Offer",
                  "itemOffered": {
                    "@type": "Service",
                    "name": "Gastric Bypass Surgery",
                    "description": "Roux-en-Y gastric bypass procedure"
                  }
                },
                {
                  "@type": "Offer",
                  "itemOffered": {
                    "@type": "Service",
                    "name": "Gastric Band Surgery",
                    "description": "Adjustable gastric banding procedure"
                  }
                }
              ]
            }
          }
        ]
      })}
    </script>
  </head>
  <body class="antialiased">
    <!-- Header -->
    <header class="bg-white border-b border-gray-200 sticky top-0 z-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center py-4">
          <div class="flex items-center">
            <a href="/" class="text-xl font-bold text-blue-600">Weight Loss Surgery Australia</a>
          </div>
          <!-- Desktop Navigation -->
          <nav class="hidden md:flex space-x-8">
            <div class="relative group">
              <button class="text-gray-700 hover:text-blue-600 flex items-center">
                Procedures
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                </svg>
              </button>
              <div class="absolute left-0 mt-2 w-56 bg-white rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
                <div class="py-2">
                  <a href="/procedures/gastric-sleeve" class="block px-4 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600">Gastric Sleeve</a>
                  <a href="/procedures/gastric-bypass" class="block px-4 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600">Gastric Bypass</a>
                  <a href="/procedures/gastric-band" class="block px-4 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600">Gastric Band</a>
                  <a href="/procedures/duodenal-switch" class="block px-4 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600">Duodenal Switch</a>
                  <div class="border-t border-gray-200 my-2"></div>
                  <a href="/procedures" class="block px-4 py-2 text-blue-600 font-semibold hover:bg-blue-50">All Procedures</a>
                </div>
              </div>
            </div>
            <div class="relative group">
              <button class="text-gray-700 hover:text-blue-600 flex items-center">
                Surgeons
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                </svg>
              </button>
              <div class="absolute left-0 mt-2 w-56 bg-white rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
                <div class="py-2">
                  <a href="/surgeons" class="block px-4 py-2 text-blue-600 font-semibold hover:bg-blue-50">Find a Surgeon</a>
                  <div class="border-t border-gray-200 my-2"></div>
                  <a href="/surgeons/sydney" class="block px-4 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600">Sydney Surgeons</a>
                  <a href="/surgeons/melbourne" class="block px-4 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600">Melbourne Surgeons</a>
                  <a href="/surgeons/compare" class="block px-4 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600">Compare Surgeons</a>
                </div>
              </div>
            </div>
            <div class="relative group">
              <button class="text-gray-700 hover:text-blue-600 flex items-center">
                Locations
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                </svg>
              </button>
              <div class="absolute left-0 mt-2 w-56 bg-white rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
                <div class="py-2">
                  <a href="/locations/sydney" class="block px-4 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600">Sydney</a>
                  <a href="/locations/melbourne" class="block px-4 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600">Melbourne</a>
                </div>
              </div>
            </div>
            <a href="/blog" class="text-gray-700 hover:text-blue-600">Blog</a>
          </nav>

          <!-- Mobile Menu Button -->
          <button id="mobile-menu-button" class="md:hidden p-2 rounded-md text-gray-700 hover:text-blue-600 hover:bg-gray-100">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
            </svg>
          </button>
          <div class="flex items-center space-x-4">
            <a href="tel:1300000000" class="hidden sm:block text-blue-600 font-semibold">1300 000 000</a>
            <a href="/#consultation" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition">Book Free Consultation</a>
          </div>
        </div>

        <!-- Mobile Navigation Menu -->
        <div id="mobile-menu" class="md:hidden hidden border-t border-gray-200 bg-white">
          <div class="px-4 py-2 space-y-1">
            <div class="border-b border-gray-200 pb-2">
              <a href="/procedures" class="block px-3 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600 font-semibold">Procedures</a>
              <div class="ml-4 space-y-1">
                <a href="/procedures/gastric-sleeve" class="block px-3 py-2 text-gray-600 hover:bg-blue-50 hover:text-blue-600">Gastric Sleeve</a>
                <a href="/procedures/gastric-bypass" class="block px-3 py-2 text-gray-600 hover:bg-blue-50 hover:text-blue-600">Gastric Bypass</a>
                <a href="/procedures/gastric-band" class="block px-3 py-2 text-gray-600 hover:bg-blue-50 hover:text-blue-600">Gastric Band</a>
                <a href="/procedures/duodenal-switch" class="block px-3 py-2 text-gray-600 hover:bg-blue-50 hover:text-blue-600">Duodenal Switch</a>
              </div>
            </div>
            <div class="border-b border-gray-200 pb-2">
              <a href="/surgeons" class="block px-3 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600 font-semibold">Surgeons</a>
              <div class="ml-4 space-y-1">
                <a href="/surgeons/sydney" class="block px-3 py-2 text-gray-600 hover:bg-blue-50 hover:text-blue-600">Sydney Surgeons</a>
                <a href="/surgeons/melbourne" class="block px-3 py-2 text-gray-600 hover:bg-blue-50 hover:text-blue-600">Melbourne Surgeons</a>
                <a href="/surgeons/compare" class="block px-3 py-2 text-gray-600 hover:bg-blue-50 hover:text-blue-600">Compare Surgeons</a>
              </div>
            </div>
            <div class="border-b border-gray-200 pb-2">
              <a href="/locations" class="block px-3 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600 font-semibold">Locations</a>
              <div class="ml-4 space-y-1">
                <a href="/locations/sydney" class="block px-3 py-2 text-gray-600 hover:bg-blue-50 hover:text-blue-600">Sydney</a>
                <a href="/locations/melbourne" class="block px-3 py-2 text-gray-600 hover:bg-blue-50 hover:text-blue-600">Melbourne</a>
              </div>
            </div>
            <a href="/blog" class="block px-3 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600 font-semibold">Blog</a>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <slot />

    <!-- Footer -->
    <footer class="bg-gray-900 text-white py-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-4 gap-8 mb-8">
          <div>
            <h3 class="font-bold text-lg mb-4">Procedures</h3>
            <ul class="space-y-2 text-gray-400">
              <li><a href="/procedures/gastric-sleeve" class="hover:text-white">Gastric Sleeve</a></li>
              <li><a href="/procedures/gastric-bypass" class="hover:text-white">Gastric Bypass</a></li>
              <li><a href="/procedures/mini-gastric-bypass" class="hover:text-white">Mini Gastric Bypass</a></li>
              <li><a href="/procedures/gastric-band" class="hover:text-white">Gastric Band</a></li>
            </ul>
          </div>
          <div>
            <h3 class="font-bold text-lg mb-4">Surgeons</h3>
            <ul class="space-y-2 text-gray-400">
              <li><a href="/surgeons" class="hover:text-white">Find a Surgeon</a></li>
              <li><a href="/surgeons/sydney" class="hover:text-white">Sydney Surgeons</a></li>
              <li><a href="/surgeons/melbourne" class="hover:text-white">Melbourne Surgeons</a></li>
              <li><a href="/surgeons/compare" class="hover:text-white">Compare Surgeons</a></li>
            </ul>
          </div>
          <div>
            <h3 class="font-bold text-lg mb-4">Locations</h3>
            <ul class="space-y-2 text-gray-400">
              <li><a href="/locations/sydney" class="hover:text-white">Sydney Surgeons</a></li>
              <li><a href="/procedures/gastric-sleeve-sydney" class="hover:text-white">Gastric Sleeve Sydney</a></li>
              <li><a href="/procedures/gastric-bypass-sydney" class="hover:text-white">Gastric Bypass Sydney</a></li>
              <li><a href="/locations/melbourne" class="hover:text-white">Melbourne Surgeons</a></li>
              <li><a href="/procedures/gastric-sleeve-melbourne" class="hover:text-white">Gastric Sleeve Melbourne</a></li>
              <li><a href="/procedures/gastric-bypass-melbourne" class="hover:text-white">Gastric Bypass Melbourne</a></li>
            </ul>
          </div>
          <div>
            <h3 class="font-bold text-lg mb-4">Resources</h3>
            <ul class="space-y-2 text-gray-400">
              <li><a href="/blog" class="hover:text-white">Blog & Articles</a></li>
              <li><a href="/blog/gastric-sleeve-recovery-week-by-week" class="hover:text-white">Recovery Guide</a></li>
              <li><a href="/blog/gastric-sleeve-cost-australia-2025" class="hover:text-white">Cost Information</a></li>
              <li>Phone: <a href="tel:1300000000" class="hover:text-white">1300 000 000</a></li>
            </ul>
          </div>
        </div>

        <div class="border-t border-gray-800 pt-8">
          <div class="flex flex-col md:flex-row justify-between items-center text-sm text-gray-400">
            <p>&copy; 2025 Weight Loss Surgery Australia. All rights reserved.</p>
            <div class="flex space-x-6 mt-4 md:mt-0">
              <a href="#privacy" class="hover:text-white">Privacy Policy</a>
              <a href="#terms" class="hover:text-white">Terms of Service</a>
              <a href="#disclaimer" class="hover:text-white">Medical Disclaimer</a>
            </div>
          </div>
          <p class="text-xs text-gray-500 mt-4 text-center">
            MEDICAL DISCLAIMER: This website provides educational information only and does not constitute medical advice. Always consult with qualified healthcare professionals before making decisions about weight loss surgery. Individual results may vary.
          </p>
        </div>
      </div>
    </footer>

    <!-- Mobile Menu JavaScript -->
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        
        if (mobileMenuButton && mobileMenu) {
          mobileMenuButton.addEventListener('click', function() {
            mobileMenu.classList.toggle('hidden');
          });
        }
      });
    </script>
  </body>
</html>
