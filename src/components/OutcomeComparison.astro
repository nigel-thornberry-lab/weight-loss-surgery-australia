---
// Evidence-based outcome comparison component
// Uses ANZBSR and clinical research data
interface Props {
  procedure1: string;
  procedure2: string;
  weightLoss1: string;
  weightLoss2: string;
  diabetesRemission1: string;
  diabetesRemission2: string;
  complicationRate1?: string;
  complicationRate2?: string;
}

const {
  procedure1,
  procedure2,
  weightLoss1,
  weightLoss2,
  diabetesRemission1,
  diabetesRemission2,
  complicationRate1,
  complicationRate2
} = Astro.props;
---

<section class="outcome-comparison bg-gradient-to-br from-blue-50 to-indigo-50 p-6 rounded-lg my-8 border border-blue-200">
  <div class="flex items-start mb-4">
    <svg class="w-6 h-6 text-blue-600 mr-3 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
    </svg>
    <div class="flex-1">
      <h3 class="text-lg font-bold text-gray-900 mb-2">Evidence-Based Outcomes</h3>
      <p class="text-sm text-gray-700 mb-4">
        Based on clinical research and Australian registry data from ANZBSR
      </p>
    </div>
  </div>

  <div class="space-y-4 ml-9">
    <!-- Weight Loss Comparison -->
    <div class="bg-white p-4 rounded-lg border border-blue-100">
      <div class="font-semibold text-gray-900 mb-3 flex items-center">
        <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
        </svg>
        Average Weight Loss (First Year)
      </div>
      <div class="grid md:grid-cols-2 gap-4">
        <div class="bg-purple-50 p-3 rounded border border-purple-200">
          <div class="text-sm text-gray-600 mb-1">{procedure1}</div>
          <div class="text-2xl font-bold text-purple-700">{weightLoss1}</div>
        </div>
        <div class="bg-green-50 p-3 rounded border border-green-200">
          <div class="text-sm text-gray-600 mb-1">{procedure2}</div>
          <div class="text-2xl font-bold text-green-700">{weightLoss2}</div>
        </div>
      </div>
    </div>

    <!-- Diabetes Remission -->
    <div class="bg-white p-4 rounded-lg border border-blue-100">
      <div class="font-semibold text-gray-900 mb-3 flex items-center">
        <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        Type 2 Diabetes Remission Rate
      </div>
      <div class="grid md:grid-cols-2 gap-4">
        <div class="bg-purple-50 p-3 rounded border border-purple-200">
          <div class="text-sm text-gray-600 mb-1">{procedure1}</div>
          <div class="text-2xl font-bold text-purple-700">{diabetesRemission1}</div>
        </div>
        <div class="bg-green-50 p-3 rounded border border-green-200">
          <div class="text-sm text-gray-600 mb-1">{procedure2}</div>
          <div class="text-2xl font-bold text-green-700">{diabetesRemission2}</div>
        </div>
      </div>
    </div>

    {(complicationRate1 && complicationRate2) && (
      <div class="bg-white p-4 rounded-lg border border-blue-100">
        <div class="font-semibold text-gray-900 mb-3 flex items-center">
          <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
          </svg>
          Major Complication Rate
        </div>
        <div class="grid md:grid-cols-2 gap-4">
          <div class="bg-purple-50 p-3 rounded border border-purple-200">
            <div class="text-sm text-gray-600 mb-1">{procedure1}</div>
            <div class="text-2xl font-bold text-purple-700">{complicationRate1}</div>
          </div>
          <div class="bg-green-50 p-3 rounded border border-green-200">
            <div class="text-sm text-gray-600 mb-1">{procedure2}</div>
            <div class="text-2xl font-bold text-green-700">{complicationRate2}</div>
          </div>
        </div>
      </div>
    )}
  </div>

  <div class="ml-9 mt-4 pt-4 border-t border-blue-200">
    <p class="text-xs text-gray-600">
      <strong>Data Sources:</strong> Australian & New Zealand Bariatric Surgery Registry (ANZBSR) 2023 Report,
      peer-reviewed clinical studies, and international ASMBS/IFSO guidelines. Individual results vary based on
      adherence to post-surgical protocols, pre-existing health conditions, and individual physiology.
    </p>
  </div>
</section>

<style>
  .outcome-comparison {
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }
</style>
