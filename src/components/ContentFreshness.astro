---
interface Props {
  datePublished: string;
  dateModified: string;
}

const { datePublished, dateModified } = Astro.props;

const formatDate = (dateStr: string) => {
  const date = new Date(dateStr);
  return date.toLocaleDateString('en-AU', { month: 'long', year: 'numeric' });
};
