---
/**
 * Surgeon Location Component
 * 
 * Displays location information with:
 * - Embedded Google Maps
 * - Contact details
 * - Directions and parking info
 */

interface Props {
  surgeon: {
    surgeon_name: string;
    business_name: string;
    street: string;
    city: string;
    state: string;
    phone: string;
    website: string;
    google_maps_url: string;
    location_display: string;
  };
}

const { surgeon } = Astro.props;

const displayName = surgeon.surgeon_name || surgeon.business_name;

// Format full address
const fullAddress = `${surgeon.street}, ${surgeon.city}, ${surgeon.state}`;

// Create Google Maps embed URL (encode the address)
const encodedAddress = encodeURIComponent(fullAddress);
const mapsEmbedUrl = `https://www.google.com/maps/embed/v1/place?key=YOUR_API_KEY&q=${encodedAddress}`;

// Format phone number for display
const formattedPhone = surgeon.phone;

// Extract website domain for display (handle invalid URLs safely)
let websiteDomain = null;
try {
  if (surgeon.website && surgeon.website.startsWith('http')) {
    websiteDomain = new URL(surgeon.website).hostname.replace('www.', '');
  } else if (surgeon.website) {
    websiteDomain = surgeon.website;
  }
} catch (e) {
  websiteDomain = surgeon.website;
}

// Opening hours (sample data - would come from actual data in production)
const openingHours = [
  { day: 'Monday', hours: '9:00 AM - 5:00 PM' },
  { day: 'Tuesday', hours: '9:00 AM - 5:00 PM' },
  { day: 'Wednesday', hours: '9:00 AM - 5:00 PM' },
  { day: 'Thursday', hours: '9:00 AM - 5:00 PM' },
  { day: 'Friday', hours: '9:00 AM - 5:00 PM' },
  { day: 'Saturday', hours: 'By Appointment' },
  { day: 'Sunday', hours: 'Closed' },
];
---

<section class="py-16 bg-gray-50">
