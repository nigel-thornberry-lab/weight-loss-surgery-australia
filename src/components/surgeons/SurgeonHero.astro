---
/**
 * Surgeon Hero Component
 * 
 * Displays the main hero section for a surgeon profile with:
 * - Profile photo
 * - Name and qualifications
 * - Trust badges and statistics
 * - Primary and secondary CTAs
 */

interface Props {
  surgeon: {
    surgeon_name: string;
    business_name: string;
    qualifications: string;
    rating: number;
    review_count: number;
    years_experience: number;
    estimated_procedures: number;
    phone: string;
    city: string;
    state: string;
    tier: 1 | 2 | 3;
    location_display: string;
  };
}

const { surgeon } = Astro.props;

// Get display name (prefer surgeon_name over business_name)
const displayName = surgeon.surgeon_name || surgeon.business_name;

// Parse qualifications
const qualifications = surgeon.qualifications 
  ? surgeon.qualifications.split(',').map(q => q.trim()).filter(q => q)
  : [];

// Format procedures with commas
const formattedProcedures = surgeon.estimated_procedures.toLocaleString();

// Generate initials for avatar fallback
const initials = displayName
  .split(' ')
  .map(word => word[0])
  .join('')
  .toUpperCase()
  .slice(0, 2);
---

<section class="relative overflow-hidden bg-[#6c95ef] text-white">
  <div class="absolute inset-0 bg-[url('/patterns/grid.svg')] opacity-10"></div>
  
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-20">
    <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-center">
      
      <!-- Left Column: Profile Photo -->
      <div class="flex justify-center lg:justify-start">
        <div class="relative">
          <!-- Profile Image (will be replaced with actual photos later) -->
          <div class="w-48 h-48 lg:w-64 lg:h-64 rounded-2xl bg-[#eedfd7] text-gray-900 flex items-center justify-center text-6xl lg:text-8xl font-bold shadow-2xl">
            {initials}
          </div>
          
          <!-- Tier Badge -->
          {surgeon.tier === 1 && (
            <div class="absolute -top-2 -right-2 bg-yellow-400 text-yellow-900 px-4 py-2 rounded-xl font-bold shadow-lg flex items-center gap-2">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
              Featured
            </div>
          )}
          
          <!-- AHPRA Badge -->
          <div class="absolute -bottom-2 -right-2 bg-green-500 text-white px-4 py-2 rounded-xl font-semibold shadow-lg flex items-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            Verified
          </div>
        </div>
      </div>
      
      <!-- Right Column: Info & CTAs -->
      <div class="text-center lg:text-left">
        
        <!-- Name & Qualifications -->
        <h1 class="text-4xl lg:text-5xl xl:text-6xl font-bold mb-4 leading-tight">
          {displayName}
        </h1>
        
        {qualifications.length > 0 && (
          <p class="text-xl lg:text-2xl text-blue-100 mb-6 font-medium">
            {qualifications.join(', ')}
          </p>
        )}
        
        <!-- Location -->
        <p class="text-lg text-white mb-6 flex items-center justify-center lg:justify-start gap-2">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
          </svg>
          {surgeon.location_display}
        </p>
        
        <!-- Trust Badges -->
        <div class="flex flex-wrap gap-4 justify-center lg:justify-start mb-8">
          
          <!-- Rating Badge -->
          <div class="bg-white/10 backdrop-blur-sm px-4 py-2 rounded-xl flex items-center gap-2">
            <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
            <span class="font-bold">{surgeon.rating}</span>
            <span class="text-blue-100">({surgeon.review_count} reviews)</span>
          </div>
          
          <!-- Experience Badge -->
          <div class="bg-white/10 backdrop-blur-sm px-4 py-2 rounded-xl flex items-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
            </svg>
            <span class="font-bold">{surgeon.years_experience}+</span>
            <span class="text-blue-100">years experience</span>
          </div>
        </div>
        
        <!-- Quick Stats Grid -->
        <div class="grid grid-cols-2 lg:grid-cols-3 gap-4 mb-8">
          
          <!-- Procedures -->
          <div class="bg-white/10 backdrop-blur-sm p-4 rounded-xl text-center">
            <div class="text-3xl font-bold mb-1">~{formattedProcedures}</div>
            <div class="text-sm text-blue-100">Procedures</div>
          </div>
          
          <!-- Rating -->
          <div class="bg-white/10 backdrop-blur-sm p-4 rounded-xl text-center">
            <div class="text-3xl font-bold mb-1">{surgeon.rating}‚≠ê</div>
            <div class="text-sm text-blue-100">Rating</div>
          </div>
          
          <!-- Experience -->
          <div class="bg-white/10 backdrop-blur-sm p-4 rounded-xl text-center col-span-2 lg:col-span-1">
            <div class="text-3xl font-bold mb-1">{surgeon.years_experience}+</div>
            <div class="text-sm text-blue-100">Years</div>
          </div>
        </div>
        
        <!-- CTAs -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          
          <!-- Primary CTA -->
          <a 
            href="#consultation" 
            class="group relative inline-flex items-center justify-center px-8 py-4 text-lg font-bold text-[#6c95ef] bg-white rounded-xl hover:bg-gray-50 transition-all duration-200 shadow-xl hover:shadow-2xl hover:scale-105"
          >
            <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
            </svg>
            Book My Consultation
            <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
            </svg>
          </a>
          
          <!-- Secondary CTA -->
          <a 
            href={`tel:${surgeon.phone}`}
            class="inline-flex items-center justify-center px-8 py-4 text-lg font-bold text-white border-2 border-white rounded-xl hover:bg-white hover:text-[#6c95ef] transition-all duration-200"
          >
            <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
            </svg>
            {surgeon.phone}
          </a>
        </div>
        
        <!-- Trust Indicators -->
        <div class="mt-8 pt-8 border-t border-white/20">
          <div class="flex flex-wrap items-center justify-center lg:justify-start gap-6 text-sm text-blue-100">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              AHPRA Verified
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              Fully Accredited
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              Medicare Approved
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
