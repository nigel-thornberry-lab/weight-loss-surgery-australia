---
const { faqs } = Astro.props;
---

{faqs && faqs.length > 0 && (
  <div class="bg-white rounded-xl p-6 shadow-lg">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">Frequently Asked Questions</h2>
    <div class="space-y-4">
      {faqs.map(faq => (
        <details class="group border-b border-gray-200 pb-4">
          <summary class="cursor-pointer font-semibold text-gray-900 hover:text-blue-600 transition-colors list-none flex justify-between items-center">
            <span>{faq.q}</span>
            <svg class="w-5 h-5 text-gray-500 group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </summary>
          <p class="mt-3 text-gray-700 leading-relaxed">{faq.a}</p>
        </details>
      ))}
    </div>
  </div>
)}

