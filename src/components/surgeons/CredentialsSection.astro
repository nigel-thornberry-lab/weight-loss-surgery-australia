---
const { credentials } = Astro.props;
const { medical_school, graduation_year, fellowships, certifications, years_in_practice, procedures_performed } = credentials;
---

<div class="bg-white rounded-xl p-6 shadow-lg">
  <h2 class="text-2xl font-bold text-gray-900 mb-6">Professional Credentials</h2>
  
  <div class="grid md:grid-cols-2 gap-6">
    {medical_school && (
      <div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Medical Education</h3>
        <p class="text-gray-700">{medical_school}</p>
        {graduation_year && <p class="text-gray-600 text-sm">Graduated: {graduation_year}</p>}
      </div>
    )}
    
    {certifications && certifications.length > 0 && (
      <div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Certifications</h3>
        <ul class="space-y-1">
          {certifications.map(cert => (
            <li class="text-gray-700 text-sm">â€¢ {cert}</li>
          ))}
        </ul>
      </div>
    )}
  </div>

  {fellowships && fellowships.length > 0 && (
    <div class="mt-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-3">Specialized Fellowships</h3>
      <div class="grid md:grid-cols-2 gap-4">
        {fellowships.map(f => (
          <div class="bg-blue-50 rounded-lg p-4">
            <p class="font-semibold text-blue-900">{f.specialty}</p>
            <p class="text-sm text-gray-700">{f.institution}</p>
            {f.year && <p class="text-xs text-gray-600 mt-1">{f.year}</p>}
          </div>
        ))}
      </div>
    </div>
  )}

  <div class="mt-6 flex gap-4">
    {years_in_practice && (
      <div class="bg-green-50 rounded-lg p-4 flex-1">
        <p class="text-sm text-gray-600">Years in Practice</p>
        <p class="text-2xl font-bold text-green-700">{years_in_practice}</p>
      </div>
    )}
    {procedures_performed && (
      <div class="bg-blue-50 rounded-lg p-4 flex-1">
        <p class="text-sm text-gray-600">Procedures Performed</p>
        <p class="text-2xl font-bold text-blue-700">{procedures_performed}</p>
      </div>
    )}
  </div>
</div>

