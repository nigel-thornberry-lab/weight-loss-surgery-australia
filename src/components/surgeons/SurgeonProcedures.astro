---
/**
 * Surgeon Procedures Component
 * 
 * Displays a grid of procedures offered by the surgeon
 * with icons, descriptions, and price ranges.
 */

interface Props {
  surgeon: {
    surgeon_name: string;
    business_name: string;
    procedures: string;
    city: string;
    slug: string;
  };
}

const { surgeon } = Astro.props;

// Parse procedures from the surgeon data (handle both string and array)
const procedureList = surgeon.procedures 
  ? (Array.isArray(surgeon.procedures) 
      ? surgeon.procedures 
      : surgeon.procedures.split(/[,|]/).map(p => p.trim()).filter(p => p))
  : ['general-bariatric'];

// Procedure data with icons and details
const procedureDetails = {
  'gastric-sleeve': {
    name: 'Gastric Sleeve',
    icon: 'ðŸ”ª',
    description: 'Reduces stomach size by 80%, leading to significant weight loss and reduced appetite.',
    priceRange: '$15,000 - $20,000',
    benefits: ['80% stomach reduction', 'Hormone changes reduce hunger', 'No foreign objects'],
    duration: '1-2 hours',
  },
  'gastric-bypass': {
    name: 'Gastric Bypass',
    icon: 'ðŸ”„',
    description: 'Combines stomach reduction with intestinal rerouting for maximum results.',
    priceRange: '$18,000 - $25,000',
    benefits: ['Best for diabetes', 'Dual mechanism', 'Proven long-term results'],
    duration: '2-3 hours',
  },
  'gastric-band': {
    name: 'Gastric Band',
    icon: 'â­•',
    description: 'Adjustable band that can be tightened or loosened based on your needs.',
    priceRange: '$12,000 - $18,000',
    benefits: ['Reversible', 'Adjustable', 'Minimally invasive'],
    duration: '30-60 minutes',
  },
  'mini-gastric-bypass': {
    name: 'Mini Gastric Bypass',
    icon: 'âš¡',
    description: 'Simplified bypass technique with faster surgery and recovery time.',
    priceRange: '$16,000 - $22,000',
    benefits: ['Simpler procedure', 'Faster recovery', 'Effective results'],
    duration: '1-2 hours',
  },
  'general-bariatric': {
    name: 'Comprehensive Bariatric Care',
    icon: 'ðŸ¥',
    description: 'Full range of weight loss surgical procedures tailored to your needs.',
    priceRange: '$12,000 - $25,000',
    benefits: ['Multiple options', 'Personalized care', 'Complete support'],
    duration: 'Varies',
  },
};

// Get procedures for this surgeon
const surgeonProcedures = procedureList
  .map(proc => {
    const key = (proc || '').toLowerCase();
    return procedureDetails[key] || procedureDetails['general-bariatric'];
  })
  .slice(0, 6); // Limit to 6 procedures max

const displayName = surgeon.surgeon_name || surgeon.business_name;
---

<section class="py-16 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
        Procedures Offered
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        {displayName} specializes in the following weight loss surgery procedures
      </p>
    </div>
    
    <!-- Procedures Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {surgeonProcedures.map((procedure) => (
        <div class="group bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden hover:-translate-y-1">
          
          <!-- Card Header -->
          <div class="bg-gradient-to-br from-blue-500 to-blue-700 p-6 text-white">
            <div class="text-5xl mb-3">{procedure.icon}</div>
            <h3 class="text-2xl font-bold mb-2">{procedure.name}</h3>
            <p class="text-blue-100">{procedure.duration}</p>
          </div>
          
          <!-- Card Body -->
          <div class="p-6">
            <p class="text-gray-700 mb-4 leading-relaxed">
              {procedure.description}
            </p>
            
            <!-- Benefits List -->
            <ul class="space-y-2 mb-6">
              {procedure.benefits.map((benefit) => (
                <li class="flex items-start gap-2 text-sm text-gray-600">
                  <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  {benefit}
                </li>
              ))}
            </ul>
            
            <!-- Price Range -->
            <div class="mb-6">
              <p class="text-sm text-gray-500 mb-1">Estimated Cost</p>
              <p class="text-2xl font-bold text-blue-600">{procedure.priceRange}</p>
              <p class="text-xs text-gray-500 mt-1">*Medicare rebates may apply</p>
            </div>
            
            <!-- CTA Button -->
            <a 
              href={`/procedures/${(procedure.name || 'procedure').toLowerCase().replace(/\s+/g, '-')}-${(surgeon?.city || 'australia').toLowerCase()}?surgeon=${surgeon?.slug || ''}`}
              class="block w-full text-center bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-xl transition-colors duration-200 group-hover:bg-blue-700"
            >
              Learn More
              <svg class="inline-block w-4 h-4 ml-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>
    
    <!-- Additional Info -->
    <div class="mt-12 bg-blue-50 rounded-2xl p-8 text-center">
      <h3 class="text-2xl font-bold text-gray-900 mb-4">
        Not sure which procedure is right for you?
      </h3>
      <p class="text-gray-700 mb-6 max-w-2xl mx-auto">
        Book a free consultation with {displayName} to discuss your weight loss goals and determine the best surgical option for your unique situation.
      </p>
      <a 
        href="#consultation" 
        class="inline-flex items-center justify-center px-8 py-4 text-lg font-bold text-white bg-blue-600 hover:bg-blue-700 rounded-xl transition-colors duration-200 shadow-lg hover:shadow-xl"
      >
        Book Free Consultation
        <svg class="w-5 h-5 ml-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
        </svg>
      </a>
    </div>
  </div>
</section>
