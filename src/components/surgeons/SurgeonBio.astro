---
/**
 * Surgeon Bio Component
 * 
 * Displays the surgeon's full biography with:
 * - Bio content with prose styling
 * - Qualifications list
 * - Hospital affiliations (if available)
 */

interface Props {
  surgeon: {
    surgeon_name: string;
    business_name: string;
    bio_long: string;
    qualifications: string;
    years_experience: number;
    city: string;
    state: string;
  };
}

const { surgeon } = Astro.props;

const displayName = surgeon?.surgeon_name || surgeon?.business_name || surgeon?.name || 'the surgeon';

// Parse qualifications
const qualifications = surgeon?.qualifications 
  ? surgeon.qualifications.split(',').map(q => q.trim()).filter(q => q)
  : [];

// Format bio content (convert **text** to <strong>text</strong> and handle line breaks)
const formattedBio = (surgeon?.bio_long || surgeon?.bio || '')
  .replace(/\*\*(.*?)\*\*/g, '<strong class="font-bold text-gray-900">$1</strong>')
  .split('\n\n')
  .map(paragraph => `<p class="mb-6">${paragraph.replace(/\n/g, '<br>')}</p>`)
  .join('');

// Sample hospital affiliations (these would come from data in production)
const hospitals = [
  { name: `${surgeon?.city || 'Private'} Private Hospital`, verified: true },
  { name: `${surgeon?.state || 'Surgical'} Surgical Centre`, verified: true },
];

// Qualifications details with expanded info
const qualificationDetails = {
  'FRACS': {
    full: 'Fellow of the Royal Australasian College of Surgeons',
    icon: 'üéì',
    description: 'Highest surgical qualification in Australia and New Zealand',
  },
  'MBBS': {
    full: 'Bachelor of Medicine, Bachelor of Surgery',
    icon: 'üìö',
    description: 'Primary medical degree for practicing medicine',
  },
  'FRCS': {
    full: 'Fellow of the Royal College of Surgeons',
    icon: 'üèÜ',
    description: 'International surgical fellowship qualification',
  },
  'FACS': {
    full: 'Fellow of the American College of Surgeons',
    icon: 'üåé',
    description: 'US-based surgical excellence recognition',
  },
  'PhD': {
    full: 'Doctor of Philosophy',
    icon: 'üî¨',
    description: 'Advanced research doctorate',
  },
  'MD': {
    full: 'Doctor of Medicine',
    icon: '‚öïÔ∏è',
    description: 'Advanced medical degree',
  },
  'GAICD': {
    full: 'Graduate of the Australian Institute of Company Directors',
    icon: 'üíº',
    description: 'Leadership and governance qualification',
  },
};
---

<section class="py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <div class="grid lg:grid-cols-3 gap-12">
      
      <!-- Main Bio Content (2/3 width) -->
      <div class="lg:col-span-2">
        
        <!-- Section Header -->
        <div class="mb-8">
          <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
            About {displayName}
          </h2>
          <div class="w-20 h-1 bg-[#6c95ef] rounded-full"></div>
        </div>
        
        <!-- Bio Content -->
        <div class="prose prose-lg max-w-none">
          <div class="text-gray-700 leading-relaxed" set:html={formattedBio} />
        </div>
        
        <!-- Professional Highlights -->
        <div class="mt-12 grid md:grid-cols-2 gap-6">
          
          <div class="bg-[#def7f1] rounded-xl p-6">
            <div class="flex items-center gap-3 mb-3">
              <div class="w-12 h-12 bg-[#6c95ef] rounded-lg flex items-center justify-center text-2xl">
                üéØ
              </div>
              <h3 class="text-xl font-bold text-gray-900">Specialization</h3>
            </div>
            <p class="text-gray-700">
              Bariatric and metabolic surgery with focus on minimally invasive techniques
            </p>
          </div>
          
          <div class="bg-[#eedfd7] rounded-xl p-6">
            <div class="flex items-center gap-3 mb-3">
              <div class="w-12 h-12 bg-[#6c95ef] rounded-lg flex items-center justify-center text-2xl">
                ‚≠ê
              </div>
              <h3 class="text-xl font-bold text-gray-900">Experience</h3>
            </div>
            <p class="text-gray-700">
              {surgeon?.years_experience || 0}+ years of dedicated bariatric surgical practice
            </p>
          </div>
        </div>
      </div>
      
      <!-- Sidebar (1/3 width) -->
      <div class="lg:col-span-1">
        
        <!-- Qualifications Card -->
        {qualifications.length > 0 && (
          <div class="bg-[#eedfd7] rounded-2xl p-6 mb-8 shadow-lg border-2 border-gray-200">
            <h3 class="text-2xl font-bold text-gray-900 mb-6 flex items-center gap-2">
              <svg class="w-7 h-7 text-[#6c95ef]" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z"/>
              </svg>
              Qualifications
            </h3>
            
            <ul class="space-y-4">
              {qualifications.map((qual) => {
                const details = qualificationDetails[qual] || {
                  full: qual,
                  icon: 'üìú',
                  description: 'Professional qualification',
                };
                
                return (
                  <li class="flex items-start gap-3">
                    <div class="flex-shrink-0 w-10 h-10 bg-white rounded-lg flex items-center justify-center text-xl shadow-sm">
                      {details.icon}
                    </div>
                    <div>
                      <div class="font-bold text-gray-900">{qual}</div>
                      <div class="text-sm text-gray-700 mt-1">{details.full}</div>
                      <div class="text-xs text-gray-600 mt-1">{details.description}</div>
                    </div>
                  </li>
                );
              })}
            </ul>
          </div>
        )}
        
        <!-- Hospital Affiliations Card -->
        <div class="bg-white rounded-2xl p-6 border-2 border-gray-200 shadow-lg">
          <h3 class="text-2xl font-bold text-gray-900 mb-6 flex items-center gap-2">
            <svg class="w-7 h-7 text-[#6c95ef]" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a1 1 0 110 2h-3a1 1 0 01-1-1v-2a1 1 0 00-1-1H9a1 1 0 00-1 1v2a1 1 0 01-1 1H4a1 1 0 110-2V4zm3 1h2v2H7V5zm2 4H7v2h2V9zm2-4h2v2h-2V5zm2 4h-2v2h2V9z" clip-rule="evenodd"/>
            </svg>
            Hospital Affiliations
          </h3>
          
          <ul class="space-y-4">
            {hospitals.map((hospital) => (
              <li class="flex items-start gap-3">
                <div class="flex-shrink-0">
                  {hospital.verified ? (
                    <svg class="w-6 h-6 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                  ) : (
                    <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd"/>
                    </svg>
                  )}
                </div>
                <div>
                  <div class="font-semibold text-gray-900">{hospital.name}</div>
                  {hospital.verified && (
                    <div class="text-xs text-green-600 mt-1">‚úì Accredited Facility</div>
                  )}
                </div>
              </li>
            ))}
          </ul>
          
          <div class="mt-6 pt-6 border-t border-gray-200">
            <p class="text-sm text-gray-600 flex items-start gap-2">
              <svg class="w-5 h-5 text-[#6c95ef] flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
              </svg>
              All procedures performed in fully accredited hospital facilities with state-of-the-art operating theaters.
            </p>
          </div>
        </div>
        
        <!-- Professional Memberships -->
        <div class="mt-8 bg-[#def7f1] rounded-2xl p-6">
          <h3 class="text-lg font-bold text-gray-900 mb-4">Professional Memberships</h3>
          <ul class="space-y-2 text-sm text-gray-700">
            <li class="flex items-center gap-2">
              <svg class="w-4 h-4 text-[#6c95ef]" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              RACS (Royal Australasian College of Surgeons)
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-4 h-4 text-[#6c95ef]" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              OSSANZ (Obesity Surgery Society of ANZ)
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-4 h-4 text-[#6c95ef]" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              IFSO (International Federation for Surgery of Obesity)
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
