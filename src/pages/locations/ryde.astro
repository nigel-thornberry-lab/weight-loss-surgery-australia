<BaseLayout title={title} description={description}>
	<!-- Breadcrumbs -->
	<div class="bg-gray-50 border-b border-gray-200">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
			<nav class="flex text-sm" aria-label="Breadcrumb">
