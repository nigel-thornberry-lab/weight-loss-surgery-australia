---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const surgeons = await getCollection('surgeons');
const hornsbySurgeons = surgeons.filter((s: any) =>
	s.data.location?.includes('Hornsby') ||
	s.data.suburbs?.includes('Hornsby') ||
	s.data.location?.includes('Ku-ring-gai')
);

const title = "Weight Loss Surgery Hornsby NSW | Expert Bariatric Surgeons";
const description = "Find weight loss surgery in Hornsby with comprehensive local support. Expert surgeons, local dietitians, physiotherapy services, and detailed Medicare information for Hornsby residents.";
