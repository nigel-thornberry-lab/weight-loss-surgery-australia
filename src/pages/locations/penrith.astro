---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const surgeons = await getCollection('surgeons');
const penrithSurgeons = surgeons.filter((s: any) =>
	s.data.location?.includes('Penrith') ||
	s.data.suburbs?.includes('Penrith')
);

const title = "Weight Loss Surgery Penrith NSW | Expert Bariatric Surgeons";
const description = "Find weight loss surgery in Penrith with comprehensive local support. Expert surgeons, local hospitals, and detailed Medicare information for Penrith residents.";
