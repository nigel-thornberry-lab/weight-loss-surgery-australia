---
import '../../styles/global.css';
import QuickAnswer from '../../components/QuickAnswer.astro';
import ContentFreshness from '../../components/ContentFreshness.astro';

const meta = {
	title: "Duodenal Switch Melbourne | BPD/DS Surgery $25k-35k 2025",
	description: "Duodenal switch (BPD/DS) surgery in Melbourne. Most effective weight loss surgery: 70-80% excess weight loss. $25k-35k cost, complex procedure, experienced surgeons only. Medicare eligible.",
