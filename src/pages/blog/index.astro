  }

  .newsletter-signup button {
    padding: 0.75rem 1.5rem;
    background: #2563eb;
    color: white;
    border: none;
    border-radius: 0.375rem;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.2s;
  }

  .newsletter-signup button:hover {
    background: #1e40af;
  }

  @media (max-width: 768px) {
    .blog-header h1 {
      font-size: 2rem;
    }

    .newsletter-signup form {
      flex-direction: column;
    }
  }
</style>

