---
import BaseLayout from '../../layouts/BaseLayout.astro';

// Blog articles
const articles = [
  {
    title: "50+ Bariatric Surgery Recipes for Every Stage of Your Journey",
    description: "Complete bariatric recipe collection: Liquid, pureed, soft & solid foods. High-protein, delicious recipes for every stage of your weight loss journey.",
    href: "/blog/bariatric-surgery-recipes-all-stages/",
    category: "Recovery & Diet",
    publishDate: "2025-01-16",
    readingTime: "24 min read",
    featured: true
  },
  {
    title: "Gastric Sleeve Cost in Australia: 2025 Complete Breakdown",
    description: "Detailed gastric sleeve cost breakdown: $15K-25K self-funded, $5K-12K with insurance. Medicare rebates, payment plans, hidden costs + city-by-city pricing.",
    href: "/blog/gastric-sleeve-cost-australia-2025/",
    category: "Cost & Financing",
    publishDate: "2025-01-15",
    readingTime: "18 min read",
    featured: false
  }
];

const categories = [
  { name: 'Cost & Financing', slug: 'cost-financing', count: 1 },
  { name: 'Recovery & Diet', slug: 'recovery-diet', count: 1 },
  { name: 'Surgery Information', slug: 'surgery-information', count: 0 },
  { name: 'Pre-Surgery', slug: 'pre-surgery', count: 0 },
  { name: 'Long-Term Success', slug: 'long-term-success', count: 0 },
];
---

<BaseLayout 
  title="Bariatric Surgery Blog: Expert Guides & Resources | Weight Loss Surgery Australia"
  description="Comprehensive, evidence-based guides covering every stage of your bariatric surgery journey. From cost and eligibility to recovery and long-term success."
>
  <div class="blog-container">
    <header class="blog-header">
      <h1>Bariatric Surgery Blog</h1>
      <p class="lead">Evidence-based guides for every stage of your weight loss surgery journey</p>
    </header>

    <!-- Categories -->
    <nav class="categories">
      <h2>Browse by Category</h2>
      <div class="category-grid">
        {categories.map(category => (
          <a href={`/blog/${category.slug}/`} class="category-card">
            <h3>{category.name}</h3>
            <span class="count">{category.count} articles</span>
          </a>
        ))}
      </div>
    </nav>

    <!-- Featured Articles -->
    <section class="featured-articles">
      <h2>Latest Articles</h2>
      <div class="articles-grid">
        {articles.map(article => (
          <article class="article-card">
            <div class="article-header">
              <span class="category-badge">{article.category}</span>
              <span class="reading-time">{article.readingTime}</span>
            </div>
            <h3><a href={article.href}>{article.title}</a></h3>
            <p class="article-description">{article.description}</p>
            <div class="article-footer">
              <time datetime={article.publishDate}>
                {new Date(article.publishDate).toLocaleDateString('en-AU', { year: 'numeric', month: 'long', day: 'numeric' })}
              </time>
              <a href={article.href} class="read-more">Read Article ‚Üí</a>
            </div>
          </article>
        ))}
      </div>
    </section>

    <!-- Coming Soon Message -->
    <div class="coming-soon">
      <h2>More Articles Coming Soon</h2>
      <p>We're creating comprehensive, evidence-based articles to guide you through every stage of your bariatric surgery journey. Coming next:</p>
      <ul>
        <li>Bariatric Surgery Recipes for Every Stage</li>
        <li>Gastric Sleeve Recovery Week by Week: Complete Timeline</li>
        <li>Gastric Sleeve Diet Stages: Complete Guide</li>
        <li>Pre-Op Diet for Gastric Sleeve: Complete Guide</li>
      </ul>
      <p>Sign up for our newsletter to be notified when new articles are published.</p>
    </div>

    <!-- Newsletter Signup -->
    <div class="newsletter-signup">
      <h3>Get Notified About New Articles</h3>
      <p>Sign up to receive our latest guides and resources directly to your inbox.</p>
      <form>
        <input type="email" placeholder="Your email address" required />
        <button type="submit">Subscribe</button>
      </form>
    </div>
  </div>
</BaseLayout>

<style>
  .blog-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 1rem;
  }

  .blog-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .blog-header h1 {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: #111827;
  }

  .blog-header .lead {
    font-size: 1.25rem;
    color: #6b7280;
    max-width: 600px;
    margin: 0 auto;
  }

  .categories {
    margin-bottom: 4rem;
  }

  .categories h2 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
  }

  .category-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
  }

  .category-card {
    display: block;
    padding: 1.5rem;
    background: #f9fafb;
    border: 2px solid #e5e7eb;
    border-radius: 0.5rem;
    text-decoration: none;
    transition: all 0.2s;
  }

  .category-card:hover {
    background: #fff;
    border-color: #2563eb;
