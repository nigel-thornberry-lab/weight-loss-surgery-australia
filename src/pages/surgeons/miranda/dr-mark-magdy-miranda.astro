    ],
    "special_training": [
      "D.E.S in robotic and laparoscopic bariatric surgery"
    ],
    "years_practicing": 10
  },
  "team": {
    "surgeons": [
      {
        "name": "Dr Mark Magdy",
        "role": "Principal bariatric surgeon"
      }
    ],
    "team_size": "Multidisciplinary team",
    "has_dietitian": true,
    "has_psychologist": true,
    "has_nurses": true
  },
  "services": {
    "procedures": [
      "Laparoscopic Sleeve Gastrectomy",
      "Intragastric balloon",
      "Laparoscopic Gastric Bypass",
      "Laparoscopic Mini-bypass",
      "Laparoscopic SADI",
      "Laparoscopic hiatus hernia repair"
    ],
    "pre_op_program": "Holistic multidisciplinary care including dietetic and psychological support",
    "post_op_program": "Continued multidisciplinary follow-up monitoring weight, nutrition, and mental health",
