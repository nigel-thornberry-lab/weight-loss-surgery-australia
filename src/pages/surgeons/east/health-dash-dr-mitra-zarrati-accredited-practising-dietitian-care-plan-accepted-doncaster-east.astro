  rating: 5,
  reviewCount: 62,
  review_count: 62,
  phone: "+61416549291",
  website: "https://healthdash.com.au/",
  years_experience: 10,
  estimated_procedures: 1800,
  address: {
    street: "3 Wonuka Ct",
    city: "Doncaster East",
    state: "VIC",
