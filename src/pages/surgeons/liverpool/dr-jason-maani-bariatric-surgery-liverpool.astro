  "category": "Bariatric surgeon",
  "google_maps_url": "https://www.google.com/maps/search/?api=1&query=Dr%20Jason%20Maani%20Bariatric%20Surgery&query_place_id=ChIJ256UdTWVEmsRj7FBSF1qHDU",
  "years_experience": "10",
  "estimated_procedures": "2000",
  "slug": "dr-jason-maani-bariatric-surgery-liverpool",
  "bio_long": "Dr Jason Maani Bariatric Surgery is a leading bariatric surgeon in Liverpool; NSW; known for significant expertise in weight loss surgery. With a 5.0-star rating from 83+ patient reviews; they've built a reputation for exceptional patient outcomes and comprehensive surgical care. Specializing in gastric sleeve; bypass; and band procedures; Dr Jason Maani Bariatric Surgery offers personalized treatment plans backed by 10+ years of surgical experience.",
  "surgeon_photo": "",
  "rating": 5,
  "review_count": 83
};
const citySlug = "liverpool";
const slug = "dr-jason-maani-bariatric-surgery-liverpool";
const enhanced = {
