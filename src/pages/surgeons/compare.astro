---
/**
 * Surgeon Comparison Tool
 * 
 * Allows users to compare up to 3 surgeons side-by-side
 * URL format: /surgeons/compare?a=slug1&b=slug2&c=slug3
 */

import BaseLayout from '../../layouts/BaseLayout.astro';
import { 
  getSurgeonBySlug,
  getAllSurgeons,
  getDisplayName,
  formatRating,
  formatPhoneNumber,
  getProcedureList
} from '../../data/surgeons.ts';

// Get URL parameters
const url = new URL(Astro.request.url);
const slugA = url.searchParams.get('a') || '';
const slugB = url.searchParams.get('b') || '';
const slugC = url.searchParams.get('c') || '';

// Get surgeons
const surgeonA = slugA ? getSurgeonBySlug(slugA) : null;
const surgeonB = slugB ? getSurgeonBySlug(slugB) : null;
const surgeonC = slugC ? getSurgeonBySlug(slugC) : null;

// Filter out null surgeons
const surgeons = [surgeonA, surgeonB, surgeonC].filter(s => s !== null);
const hasComparison = surgeons.length > 0;

// Get all surgeons for search
const allSurgeons = getAllSurgeons();

// Popular comparisons (top tier 1 surgeons)
const popularSurgeons = allSurgeons
  .filter(s => s.tier === 1)
  .sort((a, b) => b.priority_score - a.priority_score)
  .slice(0, 6);

// Build share URL
const shareUrl = `${url.origin}/surgeons/compare${url.search}`;

// Helper to check if values differ
const valuesDiffer = (values: any[]) => {
  const uniqueValues = [...new Set(values)];
  return uniqueValues.length > 1;
};

// Helper to format procedures for display
const formatProcedures = (procedures: string) => {
  return procedures.split(/[,|]/).map(p => p.trim()).filter(p => p);
};

// Sample data for missing fields (would come from actual data)
const consultationFees = ['Free initial consultation', 'Free initial consultation', 'Free initial consultation'];
const insuranceAccepted = ['Medicare, Private Health', 'Medicare, Private Health', 'Medicare, Private Health'];
---

<BaseLayout 
  title={hasComparison ? `Compare Surgeons | Weight Loss Surgery Australia` : 'Compare Bariatric Surgeons | Weight Loss Surgery Australia'}
  description={hasComparison 
    ? `Compare ${surgeons.map(s => getDisplayName(s)).join(' vs ')} side-by-side. View qualifications, experience, ratings, procedures, and pricing.`
    : 'Compare bariatric surgeons in Australia. View qualifications, experience, ratings, procedures, and pricing side-by-side to make an informed decision.'
  }
