  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-blue-600 via-blue-700 to-blue-900 text-white py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl lg:text-5xl font-bold mb-4">
          {hasComparison ? 'Compare Surgeons' : 'Compare Bariatric Surgeons'}
        </h1>
        <p class="text-xl text-blue-100 max-w-3xl mx-auto">
          {hasComparison 
            ? 'Side-by-side comparison of qualifications, experience, ratings, and procedures'
            : 'Select up to 3 surgeons to compare their qualifications, experience, and services'
          }
