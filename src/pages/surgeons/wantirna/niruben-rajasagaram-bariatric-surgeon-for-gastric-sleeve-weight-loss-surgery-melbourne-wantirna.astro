};

// SEO
const title = "Niruben Rajasagaram – Bariatric Surgeon for Gastric Sleeve & Weight Loss Surgery Melbourne - Bariatric Surgeon Wantirna | Gastric Sleeve & Bypass".replace(/"/g, '\"');
